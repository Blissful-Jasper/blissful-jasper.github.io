# 📄 package.json - Node.js 依赖 (可选)
# =============================================================================
{
  "name": "academic-jekyll-site",
  "version": "1.0.0",
  "description": "Academic website built with Jekyll",
  "scripts": {
    "dev": "bundle exec jekyll serve --livereload",
    "build": "bundle exec jekyll build",
    "minify": "npm run minify:html && npm run minify:css && npm run minify:js",
    "minify:html": "npx html-minifier-terser ./_site/**/*.html --remove-comments --collapse-whitespace --file-ext html",
    "minify:css": "npx cleancss ./_site/**/*.css --batch --batch-suffix \"\"",
    "minify:js": "npx uglify-js ./_site/**/*.js -c -m --output ./_site/",
    "minify:win": "powershell -ExecutionPolicy Bypass -File ./minify-site.ps1",
    "build:prod": "bundle exec jekyll build && npm run minify:win",
    "deploy": "npm run build:prod && gh-pages -d _site"
  },
  "devDependencies": {
    "gh-pages": "^3.2.3",
    "html-minifier-terser": "^7.2.0",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/academic-website.git"
  },
  "keywords": [
    "jekyll",
    "academic",
    "website",
    "portfolio"
  ],
  "author": "Your Name",
  "license": "MIT"
}
