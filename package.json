{
  "name": "academic-jekyll-site",
  "version": "1.0.0",
  "description": "Academic website built with Jekyll",
  "scripts": {
    "dev": "bundle exec jekyll serve --livereload --host 0.0.0.0 --port 4000",
    "build": "bundle exec jekyll build",
    "clean": "bundle exec jekyll clean",
    "minify": "npm run minify:html && npm run minify:css && npm run minify:js",
    "minify:html": "find ./_site -name '*.html' -type f -exec npx html-minifier-terser {} --remove-comments --collapse-whitespace --output {} \\;",
    "minify:css": "find ./_site -name '*.css' -type f -exec npx cleancss {} -o {} \\;",
    "minify:js": "find ./_site -name '*.js' -type f -exec npx uglifyjs {} -c -m -o {} \\;",
    "minify:win": "powershell -ExecutionPolicy Bypass -File ./minify-site.ps1",
    "build:dev": "bundle exec jekyll build --drafts",
    "build:prod": "JEKYLL_ENV=production bundle exec jekyll build",
    "build:prod:win": "bundle exec jekyll build && npm run minify:win",
    "serve:prod": "npm run build:prod && bundle exec jekyll serve --no-watch",
    "deploy": "npm run build:prod:win && npx gh-pages -d _site",
    "test": "bundle exec jekyll build && bundle exec htmlproofer ./_site --check-html --check-opengraph --check-favicon --check-img-http"
  },
  "devDependencies": {
    "gh-pages": "^3.2.3",
    "html-minifier-terser": "^7.2.0",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "htmlproofer": "^5.0.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/academic-website.git"
  },
  "keywords": [
    "jekyll",
    "academic",
    "website",
    "portfolio"
  ],
  "author": "Your Name",
  "license": "MIT"
}
